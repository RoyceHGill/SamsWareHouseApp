@using Microsoft.AspNetCore.Identity
@using SamWarehouseApp.Areas.Identity.Data;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link default-text-color" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "ShoppingLists", new { area = "" })">
                <button id="logout" type="submit" class="nav-link border-0 bg-transparent default-text-color">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link default-text-color" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link default-text-color" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
